<?xml version="1.0" encoding="utf-8"?>

<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:vm="clr-namespace:KlidecekIS.ViewModels"
                       xmlns:m="clr-namespace:KlidecekIS.BL.Models;assembly=KlidecekIS.BL"
                       xmlns:views="clr-namespace:KlidecekIS.Views"
                       x:DataType="vm:GradeListViewModel"
                       x:Class="KlidecekIS.Views.Grade.GradeListView"
                       x:Name="GradeListViewRoot">

    <StackLayout>
        <Grid ColumnDefinitions="*,*,*"
              RowDefinitions="auto" RowSpacing="10">
            <!-- <Button Text="Sort by Name" Grid.Column="0" -->
            <!--         Command="{Binding SortByNameCommand}" /> -->
            <!-- <Button Text="Sort by Surname" Grid.Column="1" -->
            <!--         Command="{Binding SortBySurnameCommand}" /> -->
            <!-- <Button Text="Add new student" Grid.Column="2" -->
            <!--         Command="{Binding AddNewGradeCommand }" /> -->
        </Grid>
        <Grid ColumnDefinitions="*"
              RowDefinitions="auto" RowSpacing="10">

            <CollectionView ItemsSource="{Binding Grades}"
                            Grid.Row="0"
                            Grid.Column="0"
                            EmptyView="Nothing to display ðŸ˜­">
                <CollectionView.ItemsLayout>
                    <GridItemsLayout Orientation="Vertical"
                                     VerticalItemSpacing="5" />
                </CollectionView.ItemsLayout>

                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="m:GradeListModel">
                        <Frame Padding="10"
                               IsClippedToBounds="True"
                               HeightRequest="100">

                            <Frame.GestureRecognizers>
                                <TapGestureRecognizer
                                    Command="{Binding Source={x:Reference GradeListViewRoot}, Path=BindingContext.GoToDetailCommand}"
                                    CommandParameter="{Binding Id}" />
                            </Frame.GestureRecognizers>

                            <Grid ColumnDefinitions="auto,*,150" ColumnSpacing="10"
                                  RowDefinitions="*,*">
                                <Image Grid.Column="0" Grid.Row="0"
                                       Grid.RowSpan="2"
                                       Source="{Binding Score}" />
                                <Label Grid.Column="1" Grid.Row="0"
                                       Text="{Binding Note}" />
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </Grid>

    </StackLayout>
</views:ContentPageBase>