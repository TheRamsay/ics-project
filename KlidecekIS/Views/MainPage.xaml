<?xml version="1.0" encoding="utf-8" ?>
<views:ContentPageBase xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
                       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                       xmlns:views="clr-namespace:KlidecekIS.Views"
                       xmlns:vm="clr-namespace:KlidecekIS.ViewModels"
                       x:Class="KlidecekIS.Views.MainPage"
                       x:DataType="vm:MainPageViewModel"
                       x:Name="MainPageRoot">

    
    <ContentPage.Content>
        <StackLayout Spacing="20" Width="80" VerticalOptions="Center" HorizontalOptions="Center">
            <Button Text="List of students" Command="{Binding GoToStudentsCommand}" />
            <Button Text="List of subjects" Command="{Binding GoToSubjectsCommand}" />
            <Button Text="List of rooms" Command="{Binding GoToRoomsCommand}" />
        </StackLayout>
    </ContentPage.Content>
</views:ContentPageBase>